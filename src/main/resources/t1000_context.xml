<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
		
		default-lazy-init="true"
		>
		
	<import resource='db_context.xml'/>
	<import resource="toshiba.xml"/>
	<import resource="sony.xml"/>
		 
	<bean id="t1000" class="ua.training.spring.bean.robot.ModelT1000" scope="prototype" parent='baseModel'>
		
		<constructor-arg value="sliver" index='3'/>
		<constructor-arg value="2006" index='4'/>
		<constructor-arg value="true" index='5'/>
	
	</bean>
	
	<bean id="baseModel" abstract="true">
		
		<constructor-arg ref="toshibaHand" index='0'/>
		<constructor-arg ref="sonyLeg" index='1'/> 
		<constructor-arg ref="toshibaHead" index='2'/>
		
	</bean>

</beans>